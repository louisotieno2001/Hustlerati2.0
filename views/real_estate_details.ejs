<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hustlerati - Real Estate Details</title>
    <link rel="icon" href="/images/logo.png" type="image/x-icon">
    <link rel="apple-touch-icon" href="/images/logo.png">
    <link rel="stylesheet" href="/stylesheets/default.css">
    <link rel="stylesheet" href="/stylesheets/real_estate.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>

    <main>
        <section class="real-estate-details">
            <div class="container">
                <% if (error) { %>
                    <div class="error-message">
                        <h1>Error</h1>
                        <p class="error-message"><%= error %></p>
                        <a href="/real_estate" class="btn btn-primary">Back to Listings</a>
                    </div>
                <% } else if (property) { %>
                    <div class="property-details-container">

                        <!-- Property Header -->
                        <div class="property-header">
                            <div class="property-title-section">
                                <h1><%= property.title || 'Untitled Property' %></h1>
                                <div class="property-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= property.location || 'Location not specified' %></span>
                                </div>
                                <div class="property-price">
                                    <span class="price-amount"><%= Number(property.price || 0).toLocaleString() %> <%= property.currency %></span>
                                    <span class="price-period">/<%= property.lease_terms %></span>
                                </div>
                            </div>
                        </div>
                        <div class="property-image-wrapper">
                            <!-- Property Images -->
                            <div class="property-image">
                                   <% if (property.media && property.media.id) { %>
                                        <% const mediaUrl = property.media.url || `/assets/${property.media.id}`; %>
                                        <% const filename = property.media.filename_download || property.media.filename_disk || ''; %>
                                        <% if (filename.endsWith('.mp4') || filename.endsWith('.webm') || filename.endsWith('.ogg') || filename.endsWith('.mov')) { %>
                                            <video class="property-media" controls preload="metadata">
                                                <source src="<%= mediaUrl %>" type="video/mp4">
                                                <source src="<%= mediaUrl %>" type="video/webm">
                                                <source src="<%= mediaUrl %>" type="video/ogg">
                                                Your browser does not support the video tag.
                                            </video>
                                        <% } else if (filename.endsWith('.jpg') || filename.endsWith('.jpeg') || filename.endsWith('.png') || filename.endsWith('.gif') || filename.endsWith('.webp')) { %>
                                            <img class="property-media" 
                                                 src="<%= mediaUrl %>" 
                                                 alt="Featured Image"
                                                 loading="lazy"
                                                 onerror="this.style.display='none';this.nextElementSibling.style.display='block';">
                                            <!-- Fallback content if image fails to load -->
                                            <div class="media-fallback" style="display:none;">
                                                <i class="fas fa-image"></i>
                                                <span>Image Preview Unavailable</span>
                                            </div>
                                        <% } else { %>
                                            <!-- Default media fallback -->
                                            <div class="media-fallback">
                                                <i class="fas fa-file-alt"></i>
                                                <span>Media Preview</span>
                                            </div>
                                        <% } %>
                                    <% } else { %>
                                        <!-- No media fallback -->
                                        <div class="media-fallback">
                                            <i class="fas fa-newspaper"></i>
                                            <span>property Article</span>
                                        </div>
                                    <% } %>
                            </div>
                        </div>
                        <!-- Property Information Grid -->
                        <div class="property-info-grid">
                            <!-- Main Details -->
                            <div class="info-section">
                                <h2>Property Details</h2>
                                <div class="details-grid">
                                    <div class="detail-item">
                                        <i class="fas fa-ruler-combined"></i>
                                        <div>
                                            <span class="detail-label">Size: </span>
                                            <span class="detail-value"><%= Number(property.size || 0).toLocaleString() %> sq ft</span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-building"></i>
                                        <div>
                                            <span class="detail-label">Property Type:</span>
                                            <span class="detail-value"><%= property.property_type || property.type || 'Not specified' %></span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-users"></i>
                                        <div>
                                            <span class="detail-label">Space Type</span>
                                            <span class="detail-value"><%= property.space_type || property.spaceType || 'Not specified' %></span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-calendar-alt"></i>
                                        <div>
                                            <span class="detail-label">Lease Terms:</span>
                                            <span class="detail-value"><%= property.lease_terms || property.leaseTerms || 'Not specified' %></span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-clock"></i>
                                        <div>
                                            <span class="detail-label">Availability:</span>
                                            <span class="detail-value"><%= property.availability || 'Not specified' %></span>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-briefcase"></i>
                                        <div>
                                            <span class="detail-label">Business Size:</span>
                                            <span class="detail-value"><%= Array.isArray(property.business_size) ? property.business_size.join(', ') : (property.business_size || property.businessSize || 'Not specified') %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Amenities -->
                            <div class="info-section">
                                <h2>Amenities</h2>
                                <div class="amenities-grid" id="amenitiesGrid">
                                    <% if (property.amenities && property.amenities.length > 0) { %>
                                        <% property.amenities.forEach(function(amenity) { %>
                                            <div class="detail-item">
                                                <i class="fas fa-check"></i>
                                                <span><%= amenity %></span>
                                            </div>
                                        <% }); %>
                                    <% } else { %>
                                        <p>No amenities listed.</p>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="info-section">
                                <h2>Description</h2>
                                <div class="property-description">
                                    <p><%= property.description || 'No description available for this property.' %></p>
                                </div>
                            </div>

                            <!-- Contact Information -->
                            <div class="info-section">
                                <h2>Contact Information</h2>
                                <div class="contact-info">
                                    <div class="contact-item">
                                        <i class="fas fa-user"></i>
                                        <span>Property Owner</span>
                                    </div>
                                    <div class="contact-actions">
                                        <button class="btn btn-outline" id="shareBtn">
                                            <i class="fas fa-share"></i> Share
                                        </button>
                                        <button class="btn btn-outline" id="favoriteBtn">
                                            <i class="fas fa-heart"></i> Save
                                        </button>
                                    </div>
                                    <div class="contact-actions">
                                        <button class="btn btn-outline">
                                            <i class="fas fa-phone"></i> Call
                                        </button>
                                        <button class="btn btn-outline">
                                            <i class="fas fa-envelope"></i> Email
                                        </button>
                                        
                                        <button class="btn btn-primary">
                                            <i class="fas fa-calendar"></i> Schedule Visit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="error-message">
                        <h1>Property Not Found</h1>
                        <p>The property you're looking for doesn't exist or has been removed.</p>
                        <a href="/real_estate" class="btn btn-primary">Back to Listings</a>
                    </div>
                <% } %>
            </div>
        </section>
    </main>
    <!-- Footer -->
    <%- include('partials/footer') %>
    <script src="/javascript/index.js"></script>
    <script src="/javascript/property_details.js"></script>
    <script src="/javascript/accessibility.js"></script>
    <script src="/javascript/localization.js"></script>
</body>
</html>