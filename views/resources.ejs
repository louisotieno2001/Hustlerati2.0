                    <!-- Webinars -->
                    <div class="education-category">
                        <div class="category-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3>Live Webinars</h3>
                        <p>Interactive sessions with real estate experts and industry professionals</p>
                        <div class="category-stats">
                            <span>Monthly Sessions</span>
                            <span>Q&A Included</span>
                        </div>
                        <a href="#" class="category-link">Join Webinar <i class="fas fa-calendar"></i></a>
                    </div>

                    <!-- E-books -->
                    <div class="education-category">
