                        <h3>Free E-books</h3>
                        <p>Comprehensive guides and checklists for download</p>
                        <div class="category-stats">
                            <span>10+ E-books</span>
                            <span>PDF Format</span>
                        </div>
                        <a href="#" class="category-link">Download Now <i class="fas fa-download"></i></a>
                    </div>

                    <!-- Glossary -->
                    <div class="education-category">
                        <div class="category-icon">
                            <i class="fas fa-spell-check"></i>
                        </div>
                        <h3>Real Estate Glossary</h3>
                        <p>Complete dictionary of real estate terms and definitions</p>
                        <div class="category-stats">
                            <span>500+ Terms</span>
                            <span>Searchable</span>
                        </div>
                        <a href="#" class="category-link">Browse Terms <i class="fas fa-search"></i></a>
                    </div>
                </div>
            </section>

            <!-- Community Resources -->
            <section class="resources-section">
                <div class="section-header">
                    <h2><i class="fas fa-users"></i> Community Resources</h2>
                    <p>Connect with local professionals and community organizations</p>
                </div>

                <div class="community-grid">
                    <!-- Local Agents -->
                    <div class="community-card">
                        <div class="community-icon">
                            <i class="fas fa-user-tie"></i>
                        </div>
                        <h3>Find Local Agents</h3>
                        <p>Connect with licensed real estate professionals in your area</p>
                        <a href="#" class="community-link">Browse Agents <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <!-- Lenders -->
                    <div class="community-card">
                        <div class="community-icon">
                            <i class="fas fa-building-columns"></i>
                        </div>
                        <h3>Mortgage Lenders</h3>
                        <p>Find trusted lenders offering competitive rates and terms</p>
                        <a href="#" class="community-link">Find Lenders <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <!-- Home Inspectors -->
                    <div class="community-card">
                        <div class="community-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                        <h3>Home Inspectors</h3>
                        <p>Locate certified home inspectors for thorough property evaluations</p>
                        <a href="#" class="community-link">Find Inspectors <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <!-- Legal Services -->
                    <div class="community-card">
                        <div class="community-icon">
                            <i class="fas fa-scale-balanced"></i>
                        </div>
                        <h3>Legal Services</h3>
                        <p>Connect with real estate attorneys and legal professionals</p>
                        <a href="#" class="community-link">Find Attorneys <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </section>

            <!-- Newsletter Signup -->
            <div class="newsletter-section">
                <div class="newsletter-content">
                    <h2><i class="fas fa-envelope"></i> Stay Updated</h2>
                    <p>Get the latest real estate insights, market updates, and exclusive resources delivered to your inbox.</p>
                    <form class="newsletter-form">
                        <input type="email" placeholder="Enter your email address" required>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Subscribe
                        </button>
                    </form>
                    <p class="newsletter-note">No spam, unsubscribe at any time.</p>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <script>
        // Newsletter form submission
        document.querySelector('.newsletter-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('input[type="email"]').value;

            // Here you would typically send the email to your server
            console.log('Newsletter signup:', email);

            // Show success message
            alert('Thank you for subscribing! You will receive our latest updates and resources.');
            this.reset();
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
    <script src="/javascript/accessibility.js"></script>
    <script src="/javascript/index.js"></script>
</body>
</html>
