            <!-- Property Owners Section -->
            <section id="property-owners" class="resources-section">
                <div class="section-header">
                    <h2><i class="fas fa-home"></i> For Property Owners</h2>
                    <p>Essential resources to help you list, market, and sell your property effectively</p>
